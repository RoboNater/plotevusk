{
  "name": "debugplot",
  "displayName": "DebugPlot",
  "description": "Plot numeric variables during Python debugging",
  "version": "0.0.1",
  "publisher": "debugplot-poc",
  "author": "DebugPlot Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/debugplot/debugplot-poc"
  },
  "keywords": [
    "python",
    "debug",
    "visualization",
    "plot",
    "chart",
    "numpy",
    "debugger",
    "data visualization"
  ],
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Debuggers",
    "Visualization"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "debugplot.plotVariable",
        "title": "Plot Variable",
        "category": "DebugPlot"
      }
    ],
    "menus": {
      "debug/variables/context": [
        {
          "command": "debugplot.plotVariable",
          "when": "debugType == 'debugpy' || debugType == 'python'"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "typescript": "^5.7.2"
  }
}
